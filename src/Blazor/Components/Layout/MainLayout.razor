@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 justify-content-end">
            <a href="https://github.com/yourusername/GoodMeal-AI-Food-Recommendation-System-Blazor" target="_blank" class="me-3">
                <span class="oi oi-code me-1"></span> GitHub
            </a>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">
                <span class="oi oi-book me-1"></span> Learn
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <div class="container">
        <span class="oi oi-warning me-2"></span>
        An unhandled error has occurred.
        <a href="." class="reload ms-2">Reload</a>
        <button class="dismiss">
            <span class="oi oi-x"></span>
        </button>
    </div>
</div>
